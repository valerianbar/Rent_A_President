<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h2><%= @president.name %></h2>
      <p><%= @president.description %></p>

      <!-- Liste des services -->
      <h4>Price :</h4>
      <p>10$ per day</p>

      <!-- Calendrier HTML5 -->
      <h4>Disponibility :</h4>
      <input type="date" id="booking-date">

      <!-- Bouton "Book This President" -->
      <button class="btn btn-primary " id="book-button">Book this president</button> <%= link_to "Back to the list", presidents_path, class: "btn btn-secondary" %>
    </div>

<div class="col-md-6">
  <div class="border rounded p-2 shadow">
    <!-- Affichage des photos du prÃ©sident -->
    <% @president.photos.each do |photo| %>
      <%= cl_image_tag photo.key, class: "img-fluid", alt: "President Photo" %>
    <% end %>
  </div>
</div>

<!-- Carte avec Mapbox -->
<div class="container mt-4">
      <h4>Localisation :</h4>
  <div style="width: 100%; height: 400px;"
    data-controller="map"
    data-map-markers-value="<%= @marker.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
